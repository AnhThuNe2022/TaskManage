@{
    @functions {

        bool menuItemActive(string controllerName, string actionName)
        {
            var currentController = (string)ViewContext.RouteData.Values["controller"];
            var currentAction = (string)ViewContext.RouteData.Values["action"];

            return string.Equals(currentController, controllerName, StringComparison.OrdinalIgnoreCase) &&
                   string.Equals(currentAction, actionName, StringComparison.OrdinalIgnoreCase);
        }

    }

    string DashboardActive = menuItemActive("Home", "Dashboard") ? "active" : "";
    string TaskManageActive = menuItemActive("Home", "TaskManage") ? "active" : "";
    string MoneyManagerActive = menuItemActive("Home", "MoneyManager") ? "active" : "";

    
} 

