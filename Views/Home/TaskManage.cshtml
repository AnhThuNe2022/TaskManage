                                        <div class="cate-color" style="background:#FA8D2F"></div>
                                        <div class="cate-color" style="background:#F4CE2B"></div>
                                        <div class="cate-color" style="background:#92CB00"></div>
                                        <div class="cate-color" style="background:#63D26F"></div>
                                        <div class="cate-color" style="background:#37C5AB"></div>
                                        <div class="cate-color" style="background:#87979F"></div>


                                    </div>
                                  
                                </div>
