@section Modal{
    <div class="modal fade" id="addModal" tabindex="-1" aria-labelledby="exampleModalLabel"  aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Add Task</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-7">
                            <label>Tiêu đề</label>
                            <input class="none-line w-100" />
                            <label>Mô tả</label>
                            <textarea rows="4" cols="50" placeholder="Nhập văn bản ở đây..."></textarea>
                             <label for="fruits">Chọn thể loại Task:</label>
                            <input type="text" onkeypress="return false;" onclick="addCategory()">
                           
                        </div>
                        <div class="col-5">
                            <label>Mức ưu tiên</label>
                            <select class="inputRound" name="options">
                                <option class="optionPriority" value="option1">Thấp</option>
                                <option class="optionPriority" value="option2">Trung bình</option>
                                <option class="optionPriority" value="option3">Cao</option>
                            </select>
                            <div class="buttonPriority" id="buttonPriority">Let's complete!</div>
                            <label>Hạn</label>
                            <input type="date" class="inputRound" value="2017-01-01" min="2005-01-01" max="2019-01-01">
                        </div>
                    </div>
                   
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary">Save changes</button>
                </div>
            </div>
        </div>
    </div>
    <div class="modal fade" id="ModalCategoryAdd" tabindex="-2" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Add Category</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="container mt-2">
                        <ul class="nav nav-tabs">
                            <li class="nav-item">
                                <a class="nav-link active" data-toggle="tab" href="#choose" role="tab">Chọn</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" data-toggle="tab" href="#addCategory" role="tab">Thêm</a>
                            </li>
                        </ul>
                        <div class="tab-content mt-2">
                            <div id="choose" class="tab-pane fade show active" role="tabpanel">
                                <input class="form-control" placeholder="search" />
                                <br />
                                <div class="mt-2">
                                    <div class="d-flex align-items-center item-choose">
                                        <i class="bi bi-bag-dash"></i>
                                        <p class="ml-2 mb-0">Công việc</p>
                                    </div>
                                    <div class="d-flex align-items-center item-choose">
                                        <i class="bi bi-bag-dash"></i>
                                        <p class="ml-2 mb-0">Công việc</p>
                                    </div>
                                </div>
                            </div>
                            <div id="addCategory" class="tab-pane fade" role="tabpanel">
                                <input class="none-line w-100" placeholder="Title" />
                                <div>
                                    <div class="d-flex">
